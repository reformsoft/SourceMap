<h1>Listing Services</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Lat</th>
    <th>Lng</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |s| %>
<% name_tag = s.tags.detect { |t| t.name == "Name" } %>
  <tr>
    <td><%= name_tag.value if name_tag %></td>
    <td><%= s.lat %></td>
    <td><%= s.lng %></td>
    <td><%= link_to 'Show', s %></td>
    <td><%= link_to 'Edit', edit_service_path(s) %></td>
    <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

