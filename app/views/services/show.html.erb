<p id="notice"><%= notice %></p>
<% name_tag = @service.tags.detect { |t| t.name == "Name" } %>
<% description_tag = @service.tags.detect { |t| t.name == "Description" } %>
<% address_tag = @service.tags.detect { |t| t.name == "Address" } %>
<% phone_tag = @service.tags.detect { |t| t.name == "Phone" } %>
<% if name_tag %>
<h1><%= name_tag.value %></h1>
<% end %>
<% if description_tag %>
<p><b><%= description_tag.name %>:</b><%= description_tag.value %></p>
<% end %>
<% if address_tag %>
<p><b><%= address_tag.name %>:</b><%= address_tag.value %></p>
<% end %>
<% if phone_tag %>
<p><b><%= phone_tag.name %>:</b><%= phone_tag.value %></p>
<% end %>

<% @service.tags.each do |t| %>
<% if not ["Name", "Description", "Address", "Phone"].include?(t.name) %>
<p>
	<b><%= t.name %>:</b>
	<%= t.value %>
</p>
<% end %>
<% end %>